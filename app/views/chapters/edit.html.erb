<div class="row">
  <div class="col-md-3">
    <%= render :partial => "chapters/chapter_list" %>
  </div>

  <div class="col-md-9">

    <div class="clearfix">
        <%= link_to("EDIT", edit_book_chapter_path(@book, @chapter), :class => "btn btn-default pull-right" ) %>
    </div>
    <br>
    <%= simple_form_for [@book, @chapter] do |f| %>
      <%= f.input :title %>
      <%= f.input :content, :input_html => { :rows => 30 } %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
