<div class="row">
  <div class="col-md-2">
    <ul>

    <% @book.chapters.each do |chapter| %>
        <li> <%= link_to(chapter.id, read_book_chapter_path(@book,chapter) )%> </li>
    <% end %>
    </ul>

  </div>

  <div class="col-md-10">

    <div class="clearfix">
        <%= link_to("EDIT", edit_book_chapter_path(@book, @chapter), :class => "btn btn-default pull-right" ) %>
    </div>
    <br>
    <div class="well">
          <%= @chapter.content.to_markdown %>

    </div>
  </div>
</div>
